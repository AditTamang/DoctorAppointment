<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Define a JDBC connection pool for MySQL -->
    <Resource name="jdbc/doctor_appointment"
              auth="Container"
              type="jakarta.sql.DataSource"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000"
              username="root"
              password=""
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/doctor_appointment?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"/>
</Context>
